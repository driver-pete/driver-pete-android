<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send zip"
        android:id="@+id/test_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendZipMessage"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send text 2"
        android:id="@+id/send_text_button"
        android:onClick="sendTextMessage"
        android:layout_below="@+id/test_button"
        android:layout_alignRight="@+id/test_button"
        android:layout_alignEnd="@+id/test_button"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:maxLines = "30"
        android:scrollbars = "vertical"
        android:id="@+id/textView"
        android:layout_toLeftOf="@+id/test_button"
        android:layout_toStartOf="@+id/test_button" />

</RelativeLayout>
